{
    "name": "pokemon-api",
    "version": "1.0.0",
    "type": "commonjs",
    "engines": {
        "node": ">=22 <23"
    },
    "author": "JoÃ£o Pedro",
    "license": "ISC",
    "scripts": {
        "dev": "tsx watch src/main/server.ts",
        "build": "tsc --project tsconfig.build.json && tsc-alias",
        "start": "node dist/main/server.js",
        "format": "biome format --write .",
        "lint": "biome check .",
        "lint:staged": "biome check --write",
        "prepare": "husky",
        "test": "cross-env NODE_ENV=test jest --runInBand",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:cov": "cross-env NODE_ENV=test jest --runInBand --coverage",
        "test:ci": "cross-env NODE_ENV=test jest --runInBand --coverage --ci --reporters=default --reporters=jest-junit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "drizzle-orm": "0.44.7",
        "express": "5.1.0",
        "helmet": "8.1.0",
        "pg": "8.16.3"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.0",
        "@jest-mock/express": "3.0.0",
        "@types/express": "5.0.3",
        "@types/jest": "30.0.0",
        "@types/node": "22.18.12",
        "@types/pg": "^8.15.5",
        "cross-env": "10.1.0",
        "drizzle-kit": "^0.31.5",
        "husky": "9.1.7",
        "jest": "30.2.0",
        "jest-junit": "16.0.0",
        "jest-mock-extended": "4.0.0",
        "lint-staged": "16.2.6",
        "ts-jest": "29.4.5",
        "ts-node": "10.9.2",
        "tsc-alias": "1.8.16",
        "tsx": "4.20.6",
        "typescript": "5.9.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "biome check --write"
        ]
    }
}
